apiVersion: v1
kind: Namespace
metadata:
  labels:
    app: automq-frontend
  name: automq-frontend
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: automq-frontend-config
  namespace: automq-frontend
data:
  config.yaml: |-
    addr: :3000
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: automq-frontend
  namespace: automq-frontend
spec:
  selector:
    matchLabels:
      app: automq-frontend
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 25%
      maxSurge: 25%
  template:
    metadata:
      labels:
        app: automq-frontend
    spec:
      containers:
        - name: automq-frontend
          resources:
            limits:
              cpu: 100m
              memory: 1000Mi
            requests:
              cpu: 10m
              memory: 128Mi
          securityContext:
            runAsNonRoot: true
            runAsUser: 1001
            allowPrivilegeEscalation: false
            capabilities:
              drop:
                - "ALL"
          image: damager6666/sealos-automq:dev
          imagePullPolicy: Always
          volumeMounts:
            - name: automq-frontend-volume
              mountPath: /config.yaml
              subPath: config.yaml
      volumes:
        - name: automq-frontend-volume
          configMap:
            name: automq-frontend-config
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: automq-frontend
  name: automq-frontend
  namespace: automq-frontend
spec:
  ports:
    - name: http
      port: 3000
      protocol: TCP
      targetPort: 3000
  selector:
    app: automq-frontend